<% block('localStyles', '<link rel="stylesheet" href="/styles/room.css">') %>
<% block('localScripts', '<script src="/js/lib/swfobject.js"></script>') %>
<% block('localScripts', '<script src="/js/room.js"></script>') %>
<% block('localScripts', '<script src="/js/vispar_flash.js"></script>') %>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-6 video-container">
			<div class="video">
				<div id="visparFlashObj">
					<h1>Alternative content</h1>
					<p>
						<a href="http://www.adobe.com/go/getflashplayer">
							<img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" 
								alt="Get Adobe Flash player" />
							</a>
					</p>
				</div>
			</div>
		</div>

		<div class="col-xs-6 chat-container">
			<div class="messages-header">
				<h2>room <%=roomId %></h2>
			</div>
			<div class="messages-container">
				<ul class="room-messages"></ul>
			</div>
			<div class="messages-control">
				<form id="sending-btn" class="row form-group">
					<div class="col-xs-9">
						<input class="form-control" autocomplete="off"
				    	placeholder="Write something..." />
					</div>
					<div class="col-xs-3">
						<button class="btn btn-primary btn-block">Send</button>
					</div>
				</form>	
			</div>
		</div>
	</div>
</div>

<% block('localScripts', '<script>VP.pageInfo = ' + user + '</script>') %>